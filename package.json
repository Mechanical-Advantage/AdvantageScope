{
  "name": "advantagescope",
  "productName": "AdvantageScope",
  "version": "2.0.0-beta-1",
  "description": "Robot telemetry application for FRC",
  "author": {
    "name": "FRC 6328",
    "email": "info@littletonrobotics.org",
    "url": "https://littletonrobotics.org"
  },
  "license": "MIT",
  "main": "bundles/main.js",
  "scripts": {
    "start": "rollup -c && electron bundles/main.js",
    "build": "rollup -c && electron-builder build",
    "fast-build": "rollup -c && electron-builder build --dir",
    "compile": "rollup -c",
    "watch": "rollup -c -w",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "install": "node ffmpegDownload.js"
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/chart.js": "^2.9.37",
    "@types/jsonfile": "^6.1.0",
    "@types/mathjs": "^9.4.2",
    "@types/remarkable": "^2.0.3",
    "@types/ssh2": "^1.11.5",
    "@types/three": "^0.144.0",
    "chart.js": "^3.9.1",
    "download": "^8.0.0",
    "electron": "^20.0.0",
    "electron-builder": "^23.3.3",
    "mathjs": "^11.3.0",
    "prettier": "2.7.1",
    "remarkable": "^2.0.1",
    "rollup": "^2.78.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "simple-statistics": "^7.7.6",
    "three": "^0.144.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "electron-fetch": "^1.7.4",
    "jsonfile": "^6.1.0",
    "ssh2": "^1.5.0"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "none"
  },
  "build": {
    "appId": "org.littletonrobotics.advantagescope",
    "copyright": "Copyright Â© 2021-2022 FRC 6328",
    "npmRebuild": false,
    "publish": [],
    "afterSign": "notarize.js",
    "files": [
      "www/**/*",
      "bundles/*",
      "icons/**/*",
      "frcData/**/*",
      "docs/**/*",
      "!**/.*"
    ],
    "extraResources": [
      {
        "from": "ffmpeg",
        "filter": [
          "ffmpeg-${os}-${arch}*"
        ]
      }
    ],
    "fileAssociations": [
      {
        "ext": "wpilog",
        "name": "WPILib robot log",
        "description": "WPILib robot log",
        "mimeType": "application/octet-stream",
        "role": "Viewer",
        "icon": "icons/app/wpilog-icon"
      },
      {
        "ext": "rlog",
        "name": "Robot log",
        "description": "Robot log",
        "mimeType": "application/octet-stream",
        "role": "Viewer",
        "icon": "icons/app/rlog-icon"
      },
      {
        "ext": "dslog",
        "name": "FRC Driver Station log",
        "description": "FRC Driver Station log",
        "mimeType": "application/octet-stream",
        "role": "Viewer",
        "icon": "icons/app/dslog-icon"
      },
      {
        "ext": "dsevents",
        "name": "FRC Driver Station events",
        "description": "FRC Driver Station events",
        "mimeType": "application/octet-stream",
        "role": "Viewer",
        "icon": "icons/app/dsevents-icon"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "icons/app/app-icon.icns",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "pacman"
      ],
      "icon": "icons/app/app-icon.icns",
      "category": "Utility"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/app/app-icon.ico"
    }
  }
}
