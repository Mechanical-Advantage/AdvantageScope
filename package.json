{
  "name": "advantage-scope",
  "productName": "Advantage Scope",
  "version": "1.18.2",
  "description": "Logging tool from FRC Team 6328.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron main.js",
    "build": "electron-builder build",
    "test-build": "electron-builder build --dir",
    "format": "prettier --write .",
    "check-format": "prettier --check ."
  },
  "author": "FRC 6328",
  "license": "MIT",
  "devDependencies": {
    "electron": "^16.0.0",
    "electron-builder": "^22.11.7",
    "prettier": "2.6.2"
  },
  "dependencies": {
    "electron-fetch": "^1.7.4",
    "jsonfile": "^6.1.0",
    "mkdirp": "^1.0.4",
    "ssh2": "^1.5.0"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "none"
  },
  "build": {
    "appId": "org.littletonrobotics.advantagescope",
    "copyright": "Copyright Â© 2021-2022 FRC 6328",
    "npmRebuild": false,
    "publish": [],
    "directories": {
      "buildResources": "./"
    },
    "fileAssociations": [
      {
        "ext": "rlog",
        "name": "Robot log",
        "description": "Robot log",
        "mimeType": "application/octet-stream",
        "role": "Viewer",
        "icon": "icons/app/rlog-icon"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "icons/app/app-icon.icns"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "pacman"
      ],
      "icon": "icons/app/app-icon.icns",
      "maintainer": "FRC 6328",
      "category": "Utility"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/app/app-icon.ico"
    }
  }
}
